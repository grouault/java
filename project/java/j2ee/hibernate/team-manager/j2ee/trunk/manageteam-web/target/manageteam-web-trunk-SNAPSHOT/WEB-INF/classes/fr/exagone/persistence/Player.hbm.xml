<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="fr.exagone.teamanage.bean.Player" table="PLAYER">
        <id name="id" column="PLAYER_ID">
            <generator class="increment"/>
        </id>
        <property name="name" type="string" column="PLAYER_NAME" />
        <property name="number" type="integer" column="PLAYER_NUMBER" />
		<property name="birthday" type="date" column="BIRTHDAY" />
      	<property name="height" type="float" column="HEIGHT" />
      	<property name="weight" type="float" column="WEIGHT" />
       	<property name="teamId" type="integer" column="TEAM_ID" />
        
    </class>

</hibernate-mapping>